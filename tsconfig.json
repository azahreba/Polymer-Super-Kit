{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es5",
        "noImplicitAny": false,
        "suppressImplicitAnyIndexErrors": true,
        "outDir": "built",
        "rootDir": ".",
        "sourceMap": true,
        "experimentalDecorators": true
    },
    "exclude": [
        "node_modules"
    ],
    "filesGlob": [
        "./web/**/*.ts",
        "!./node_modules/**/*.ts"
    ]
}